{
  "name": "promise-synchronizer",
  "version": "3.0.0",
  "description": "synchronize promise",
  "keywords": [
    "promise",
    "promise-synchronizer",
    "sync",
    "synchronize",
    "synchronizer"
  ],
  "homepage": "https://github.com/fisker/promise-synchronizer#readme",
  "bugs": {
    "url": "https://github.com/fisker/promise-synchronizer/issues"
  },
  "repository": "fisker/promise-synchronizer",
  "funding": "https://github.com/fisker/promise-synchronizer?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,cjs,mjs,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build format test dist",
    "test": "mocha",
    "test-coverage": "nyc mocha"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "mocha": {
    "require": "esm"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "deasync": "0.1.20",
    "p-is-promise": "3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@fisker/commitlint-config": "1.3.0",
    "@fisker/eslint-config": "3.1.0",
    "@fisker/eslint-config-mocha": "1.2.0",
    "@fisker/husky-config": "3.1.0",
    "@fisker/lint-staged-config": "2.2.0",
    "@fisker/prettier-config": "3.1.0",
    "chai": "4.2.0",
    "cz-conventional-changelog": "3.2.0",
    "del-cli": "3.0.1",
    "eslint": "7.7.0",
    "esm": "3.2.25",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "markdownlint-cli": "0.23.2",
    "mocha": "8.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "rollup": "2.26.3",
    "rollup-plugin-prettier": "2.1.0",
    "sort-package-json": "1.44.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
