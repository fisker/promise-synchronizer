{
  "name": "promise-synchronizer",
  "version": "1.1.4",
  "description": "synchronize promise",
  "keywords": [
    "promise",
    "promise-synchronizer",
    "sync",
    "synchronize",
    "synchronizer"
  ],
  "bugs": {
    "url": "https://github.com/fisker/promise-synchronizer/issues"
  },
  "repository": "fisker/promise-synchronizer",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build format test dist",
    "test": "mocha",
    "test-coverage": "nyc mocha"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "mocha": {
    "require": "esm"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "require": "esm"
  },
  "dependencies": {
    "deasync": "0.1.16",
    "p-is-promise": "3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.5.4",
    "@fisker/eslint-config-mocha": "1.1.8",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "chai": "4.2.0",
    "cz-conventional-changelog": "3.0.2",
    "del-cli": "3.0.0",
    "eslint": "6.7.2",
    "esm": "3.2.25",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.20.0",
    "mocha": "6.2.2",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "prettier": "1.19.1",
    "rollup": "1.27.13",
    "rollup-plugin-prettier": "0.6.0",
    "sort-package-json": "1.31.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
